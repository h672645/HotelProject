@page
@model HotelWebsite.NET.Pages.CRUD.FinnRomModel

@{
    ViewData["Title"] = "Finn Rom";
}
@inject UserManager<IdentityUser> UserManager

<h1>FinnRom</h1>

<h4>HotelReservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HotelReservation.StartDate" class="control-label"></label>
                <input asp-for="HotelReservation.StartDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="HotelReservation.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HotelReservation.EndDate" class="control-label"></label>
                <input asp-for="HotelReservation.EndDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="HotelReservation.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hotelRoom.NumberOfBeds" class="control-label"></label>
                <input asp-for="hotelRoom.NumberOfBeds" class="form-control" type="number"/>
                <span asp-validation-for="hotelRoom.NumberOfBeds" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="hotelRoom.QualityOfRoom" class="control-label"></label>
                <input asp-for="hotelRoom.QualityOfRoom" class="form-control" type="text"/>
                <span asp-validation-for="hotelRoom.QualityOfRoom" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="hotelRoom.SizeOfRoom" class="control-label"></label>
                <input asp-for="hotelRoom.SizeOfRoom" class="form-control" type="number" />
                <span asp-validation-for="hotelRoom.SizeOfRoom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sok etter rom" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <p>@Model.errormessage</p>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
